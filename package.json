{
  "name": "spacegame",
  "version": "0.0.0",
  "description": "Multiplayer space-shooter game",
  "main": "app.js",
  "scripts": {
    "test": "ava test/**/*.test.js",
    "start": "babel-node src/server/app",
    "check": "flow",
    "lint": "eslint 'src/**/*.js'",
    "coverage": "babel-node node_modules/.bin/isparta cover ava -- test/**/*.test.js",
    "build": "npm run build:js & npm run build:css & wait",
    "build:js": "browserify -o assets/bundle.js -t [ babelify --optional runtime ] src/client/main.js",
    "build:css": "stylus -o assets/style.css styles/index.styl",
    "watch": "npm run watch:js & npm run watch:css & npm run watch:app & wait",
    "watch:app": "nodemon -w src --exec babel-node src/server/app",
    "watch:js": "watchify -v -d -o assets/bundle.js -t [ babelify --optional runtime ] src/client/main.js",
    "watch:css": "stylus -w -o assets/style.css styles/index.styl"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madbence/spacegame.git"
  },
  "author": "Bence DÃ¡nyi <bence@danyi.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/madbence/spacegame/issues"
  },
  "homepage": "https://github.com/madbence/spacegame#readme",
  "dependencies": {
    "babel": "^5.8.23",
    "koa": "^1.0.0",
    "koa-mount": "^1.3.0",
    "koa-route": "^2.4.2",
    "ws": "^0.8.0"
  },
  "devDependencies": {
    "ava": "^0.2.0",
    "babel-eslint": "^4.1.3",
    "babel-runtime": "^5.8.24",
    "babelify": "^6.3.0",
    "browserify": "^11.1.0",
    "eslint": "^1.5.1",
    "eslint-plugin-react": "^3.4.2",
    "flow-bin": "^0.16.0",
    "isparta": "^3.1.0",
    "istanbul": "gotwarlost/istanbul#source-map",
    "nodemon": "^1.7.0",
    "react": "^0.13.3",
    "react-redux": "^2.1.2",
    "redux": "^3.0.0",
    "stylus": "^0.52.4",
    "uuid": "^2.0.1",
    "watchify": "^3.4.0"
  }
}
