*
  padding 0
  margin 0

body
  color #444
  font-size 14px
  font-family 'Helvetica Neue', Helvetica, Arial, sans-serif

.chat-window
  display inline-block
  width 250px
  margin 30px
  padding 20px
  box-shadow 0 0 20px rgba(0, 0, 0, 0.2)

  .messages
    height 300px
    overflow auto
  .message
    padding 5px
  .pending
    color #aaa
  .author
    font-weight bold

  input, button
    border none
    background #f6f6f6
    outline none
    padding 10px
    transition background .2s
    &:focus
      background #eee

canvas
  display inline-block
  margin 30px
  box-shadow 0 0 20px rgba(0, 0, 0, 0.2)
