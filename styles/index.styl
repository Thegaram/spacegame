*
  padding 0
  margin 0
  box-sizing border-box

html, body
  min-height 100%

body
  color #444
  font-size 14px
  font-family 'Helvetica Neue', Helvetica, Arial, sans-serif

.chat-window
  display inline-block
  width 250px
  margin 30px
  padding 20px
  box-shadow 0 0 20px rgba(0, 0, 0, 0.2)

  .messages
    height 300px
    overflow auto
  .message
    padding 5px
  .pending
    color #aaa
  .author
    font-weight bold

  input, button
    border none
    background #f6f6f6
    outline none
    padding 10px
    transition background .2s
    &:focus
      background #eee

canvas
  display inline-block
  margin 30px
  border 1px solid #666

pre
  font-size 10px
  margin 30px
  padding 10px

button, input, textarea
  outline none

button
  padding 10px
  background #eee
  border none
  cursor pointer
  transition background .5s
  &:hover
    background #ddd


#login, #placeholder
  width 480px
  margin 100px auto
  padding 10px
  text-align center
  box-shadow 0 0 20px rgba(0, 0, 0, 0.2)

  img
    display block
    margin 30px
    width 400px

  button
    display block
    width 100%
    margin-top 10px

#lobby, #game
  width 1100px
  min-height 100%
  margin 0 auto
  padding 10px
  box-shadow 0 0 20px rgba(0, 0, 0, 0.2)
