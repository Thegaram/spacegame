*
  padding 0
  margin 0
  box-sizing border-box

html, body
  min-height 100%

body
  color #444
  font-size 14px
  font-family 'Helvetica Neue', Helvetica, Arial, sans-serif

h1
  font-size 4.2rem
  line-height 110%
  margin 2.1rem 0 1.68rem 0

h2
  font-size 3.56rem
  line-height 110%
  margin 1.78rem 0 1.42rem 0

h3
  font-size 2.92rem
  line-height 110%
  margin 1.46rem 0 1.168rem 0
